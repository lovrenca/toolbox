#################################---FROM---#####################################

FROM php:alpine

################################################################################

#################################---INFO---#####################################

MAINTAINER Lovrenc Avsenek <a.lovrenc@gmail.com>

################################################################################


################################---BUILD---#####################################

RUN apk update && \
    apk upgrade --no-cache

RUN apk --no-cache add \
        curl \
        git \
        nodejs 
RUN npm install --global \
        grunt \
        grunt-cli \
        gulp \
        bower \
        webpack \
        load-grunt-tasks \
        time-grunt

RUN curl -sS https://getcomposer.org/installer | php && \
    mv composer.phar /usr/local/bin/composer

################################################################################
